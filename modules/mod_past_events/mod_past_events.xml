<?xml version="1.0" ?>
<extension type="module" version="2.5.0" method="upgrade">
	<name>Past Events</name>
	<description>Shows past events, added to Events component</description>
	<files>
		<filename module="mod_past_events">mod_past_events.php</filename>
		<filename>mod_past_events.xml</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
		<filename>media/index.html</filename>
		<filename>media/default.jpg</filename>
		<filename>media/main.js</filename>
		<filename>media/style.css</filename>
	</files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="textLimit" type="text" default="200" label="Text limit" description="Maximal number of characers in description" />
                <field name="pageLimit" type="integer" default="10" first="5" last="50" step="5"  label="Page limit" description="Maximal number of events per page" />
            </fieldset>
        </fields>
    </config>
</extension>